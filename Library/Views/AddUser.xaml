<Window x:Class="Library.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="301" Width="567">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/assets/images/redbackground.jpg"/>
        </Grid.Background>
        <TextBlock Text="New Librarian SignUp" FontSize="30" FontWeight="Bold" TextDecorations="Underline" Margin="128,10,116,213" Canvas.Left="113" Canvas.Top="20"/>
        <Button x:Name="newUserConfirm" Content="Add New User" Width="235" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Margin="172,206,0,25" Click="newUserConfirm_Click"/>
        <TextBox x:Name="usernameT" HorizontalAlignment="Left" Margin="222,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="21"/>
        <PasswordBox x:Name="passwordT" HorizontalAlignment="Left" Margin="222,122,0,0" VerticalAlignment="Top" Width="214" Height="21"/>
        <PasswordBox x:Name="repPasswordT" HorizontalAlignment="Left" Margin="263,164,0,0" VerticalAlignment="Top" Width="173" Height="21"/>
        <TextBlock HorizontalAlignment="Left" Margin="128,77,0,0" Text="Username:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17"/>
        <TextBlock HorizontalAlignment="Left" Margin="128,120,0,0" Text="Password:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17"/>
        <TextBlock HorizontalAlignment="Left" Margin="128,162,0,0" Text="Repeat Password:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17"/>
    </Grid>
</Window>
