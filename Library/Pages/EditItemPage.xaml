<Page x:Class="Library.Pages.EditItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="285" d:DesignWidth="468"
      Title="EditItemPage">
    <Canvas>
        <TextBlock x:Name="title" Text="Edit Item" Canvas.Left="155" TextWrapping="Wrap" Width="158" Height="45" FontSize="34" FontWeight="Bold" TextDecorations="Underline" TextAlignment="Center" Foreground="White"/>
        <TextBox x:Name="nameText" Canvas.Left="189" Canvas.Top="54" TextWrapping="Wrap" Width="205"/>
        <DatePicker x:Name="dateText" Width="205" FontSize="8" FontWeight="Bold" Height="18" Canvas.Left="189" Canvas.Top="92" FontStyle="Normal"/>
        <TextBox x:Name="publisherText" Canvas.Left="189" Canvas.Top="131" TextWrapping="Wrap" Width="205"/>
        <TextBox x:Name="priceText" Canvas.Left="189" Canvas.Top="173" TextWrapping="Wrap" Width="205"/>
        <TextBlock Canvas.Left="92" Canvas.Top="50" Text="Name:" TextWrapping="Wrap" Foreground="White" Width="74" Height="25" FontWeight="Normal" FontSize="18"/>
        <TextBlock Canvas.Left="92" Canvas.Top="89" Text="Print Date:" TextWrapping="Wrap" Foreground="White" Width="92" Height="25" FontWeight="Normal" FontSize="18"/>
        <TextBlock Canvas.Left="92" Canvas.Top="127" Text="Publisher:" TextWrapping="Wrap" Foreground="White" Width="81" Height="25" FontWeight="Normal" FontSize="18"/>
        <TextBlock Canvas.Left="92" Canvas.Top="169" Text="Price:" TextWrapping="Wrap" Foreground="White" Width="74" Height="25" FontWeight="Normal" FontSize="18"/>
        <Button x:Name="confirmButton" Content="Confirm" Canvas.Left="92" Canvas.Top="216" Width="302" Height="47" FontWeight="Bold" FontSize="20" FontStyle="Normal" Background="#FF00FF24" Click="confirmButton_Click"/>
    </Canvas>
</Page>
